<h1 class="heading-1">All Tasks</h1>

<div class="btn">
    <%= link_to new_task_path do %>
        <i class="fa-solid fa-plus"></i> Add A New Task
    <% end %>
</div>

<h3>Overdue</h3>
<%= render "tasks", tasks: @overdue_tasks %>

<h3>Today</h3>
<%= render "tasks", tasks: @today_tasks %>

<h3>Future Tasks</h3>
<%= render "tasks", tasks: @future_tasks %>

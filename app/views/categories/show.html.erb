<h1><%= @category.name %></h1>

<%= link_to "Edit", edit_category_path(@category) %>
<%= link_to "Delete", category_path(@category), method: :delete, data: {
        confirm: "Are you sure?"
    } %>

<h2>Tasks</h2>
<%= link_to "Add A Task", new_task_path %>

<%= render "tasks", tasks: @overdue_tasks, label: "Overdue" %>

<%= render "tasks", tasks: @today_tasks, label: "Today" %>

<%= render "tasks", tasks: @future_tasks, label: "Future Tasks" %>

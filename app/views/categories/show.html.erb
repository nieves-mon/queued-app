<h1><%= @category.name %></h1>

<%= link_to "Edit", edit_category_path(@category) %>
<%= link_to "Delete", category_path(@category), method: :delete, data: {
        confirm: "Are you sure?"
    } %>

<h2>Tasks</h2>
<%= link_to "Add A Task", new_task_path %>
<ul>
    <% @tasks.each do |task| %>
        <li><%= task.title %>
            <%= link_to "Show", task_path(task) %>
            <%= link_to "Edit", edit_task_path(task) %>
            <%= link_to "Delete", task_path(task), method: :delete, data: {
                    confirm: "Are you sure"
            } %>
        </li>
    <% end %>
</ul>

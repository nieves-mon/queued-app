<%= form_with model: @category do |f| %>
    <div class="field-col">
        <% category.errors.full_messages.each do |message| %>
            <div class="error"><%= message %></div>
        <% end %>
    </div>

    <div class="field-row">
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.submit btn_label, class: 'btn' %>
    </div>
<% end %>

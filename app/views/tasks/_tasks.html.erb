<h3><%= label %></h3>

<ul>
    <% tasks.each do |task| %>
        <li>
            <%= task.title %>
            <%= link_to "Show", task_path(task) %>
            <%= link_to "Edit", edit_task_path(task) %>
            <%= link_to "Delete", task_path(task), method: :delete, data: {
                    confirm: "Are you sure"
            } %>
        </li>
    <% end %>
</ul>

<%= link_to "Create A New Category", new_category_path %>

<ul>
    <% @categories.each do |category| %>
        <li><%= category.name %>
            <%= link_to "Show", category_path(category.id) %>
            <%= link_to "Edit", edit_category_path(category.id) %>
            <%= link_to "Delete", category_path(category.id), method: :delete, data: {
                    confirm: "Are you sure?"
                } %>
        </li>
    <% end %>
</ul>
